<% provide(:title, "ログイン") %>

<div class="loginpage">
  <h1>ログイン</h1>
    <div class="row">
      <div class="col">
        <h2>会員の方</h2>
        <%= form_with(scope: :session, url: login_path, local: true) do |f| %>

          <%= f.label :email, class: "label-login" %>
          <%= f.email_field :email, class: 'form-control' %>

          <%= f.label :password, "パスワード", class: "label-login" %>
          <%= f.password_field :password, class: 'form-control' %>
          <div class="center">
          <%= f.submit "ログイン", class: "btn btn-primary btn-login" %>
          </div>
        <% end %>
        
      </div>
      <div class="col">
        <h2>初めてご利用の方はこちら</h2>
          <div class="center">
            <%= link_to "登録ページ", new_customer_user_path, class: "btn btn-info" %>
        </div>
      </div>
    </div>
</div>
