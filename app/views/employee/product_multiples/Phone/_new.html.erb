<div class="container">
  <div class="row">
    <div class="col-md-12 shadow ">
      <table class="w-100">
        <tr>
          <td> <%= button_to "＋", rows_employee_product_multiples_path, { method: :post, params: {plus:true}, class: "btn btn-primary btn-block"} %></td>
          <% if @number >1%>
            <td><%= button_to "ー",rows_employee_product_multiples_path , { method: :post, params: {plus:false}, class: "btn btn-danger btn-block"} %></td>
          <% end %>
        </tr>
      </table>
        <%= form_with(model: @form, url: employee_product_multiples_path,local:true) do |f| %>
        <table class="table table-striped table-bordered table-hover alias-table">
                <tbody>
                    <%= f.fields_for :items do |af| %>
                     <tr>
                        <table class="table table-bordered bg-secondary">
                            <tr>
                          <th class="align-middle text-white" >写真</th>
                          <td class="align-middle"><%= af.file_field :image, class: "form-control" %></td>
                        </tr>

                        <tr>
                          <th  class="align-middle text-white">商品名</th>
                          <td class="align-middle"><%= af.text_field :name, class:"form-control" %></td>
                        </tr>

                        <tr>
                          <th  class="align-middle text-white">カテゴリ</th>
                          <td class="align-middle">
                            <%= af.select :category, Item.statuses.keys.map {|k| [I18n.t("enums.item.status.#{k}"), k]},{}, class: 'form-control' %>
                          </td>
                        </tr> 

                        <tr>
                           <th  class="align-middle text-white">説明</th>
                            <td>
                              <%= af.text_area :info, rows: 4, class: "form-control" %>
                            </td>
                        </tr>
                        </table>
                     </tr>
                   <% end %>
                </tbody>
            </table>
            <div class="text-center">
              <%= f.submit '登録' ,class: "btn btn-primary w-50 m-3"%>
            </div>
      <% end %>
    </div>
  </div>
</div>
