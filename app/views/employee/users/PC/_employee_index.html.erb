<div class="text-center font-weight-bold mt-4"><h1>従業員一覧</h1></div>
 <%= link_to '新規従業員登録', "#", class: "btn btn-primary mb-3" %>
 <%= render '/employee/users/PC/search_user', {q: @employee_q, user: 'employee'} %>
 
<% if employees.count >0 %>  
<div class="bg-light shadow p-4">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th colspan="2" class="bg-success text-white font-weight-bold text-center w-50">従業員名</th>
        <th rowspan="2" class="bg-success text-white font-weight-bold text-center align-middle">メールアドレス</th>
        <th rowspan="2" class="bg-success text-white font-weight-bold text-center align-middle">電話番号</th>
        <th rowspan="2" class="bg-success text-white font-weight-bold text-center"></th>
      </tr>
      <tr>
         <th class="bg-success text-white font-weight-bold text-center">名前</th>
         <th class="bg-success text-white font-weight-bold text-center">カナ</th>
      </tr>
    </thead>  
    <tbody>
      <% employees.each do |employee| %>
        <tr>
          <td class="font-weight-bold text-center"><%= employee.name %></td>
          <td class="font-weight-bold text-center"><%= employee.name_kana %></td>
          <td class="font-weight-bold text-center"><%= employee.email %></td>
          <td class="font-weight-bold text-center">
          　<a href="tel:<%= employee.tellnumber %>"><%= employee.tellnumber %></a>
          </td>
          <td>
               <%= link_to '削除', [:employee, employee], data:{confirm: '削除しますか？' }, method: :delete, id: "delete_user_employee_button#{employee.id}", class: 'btn btn-danger btn-lg' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
 <% else %> 
   <div class="p-5 bg-secondary text-center text-white font-weight-bold">まだ従業員が登録されてません。</div>
 <% end %>