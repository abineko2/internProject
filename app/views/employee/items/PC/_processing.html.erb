<div class="container">
  <div class="row">
    <div class="col-md-6 offset-3 bg-lignt p-5 mt-3 shadow">
      <%= form_with model: [:employee, item],  local: true do |f| %>

        <div class="form-group">
          <%= f.label '商品の加工方法を選択してください。(複数可)' %>
          <%= f.select :name, [["coffee","coffee"],["tea","tea"],["cocoa","cocoa"]], {},{multiple: true, class: 'form-control js-searchable'}  %>
        </div>

        <div class="mt-2">
          <%= f.submit '追加', class: 'btn btn-primary btn-block' %>
        </div>

      <% end %>
    
    </div>
</div>
