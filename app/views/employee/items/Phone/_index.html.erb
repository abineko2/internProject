<%= link_to '新規登録', new_employee_item_path, class: 'btn btn-success btn-block mt-5' %>

<div class="pagination-phone-area">
    <%= paginate items,  theme: 'twitter-bootstrap-4' %>
</div>

<% if items.count >0 %>  
  <table class="table table-bordered">
    <thead>
      <tr>
        <th class="bg-dark text-white font-weight-bold text-center">商品リスト</th>
      </tr>
    </thead>
    <tbody>
    　<% items.each do |item| %>
      <tr>
        <td>
          <table style="width:100%;" class="mb-3">
            <tbody>
              <tr>
                <td rowspan="3" class="w-25"><%= image_tag(employee_item_image_path(item.id),size:'80') %></td>
              </tr>
              <tr>
                <th class="bg-dark text-white font-weight-bold w-25 align-middle">商品名</th>
                <td class="font-weight-bold text-center w-25 align-middle"><%= link_to item.name,[:employee, item] %></td>
              </tr>
              <tr>
                <th class="bg-dark text-white font-weight-bold align-middle" style="font-size:9px">カテゴリー</th>
                <td class="font-weight-bold text-center w-25 align-middle"><%= I18n.t("enums.item.status.#{item.category}") %></td>
              </tr>
            </tbody>
          </table>
          <%= link_to '編集', edit_employee_item_path(item), class: 'btn btn-primary  item-index-button' %>
          <%= link_to '加工法編集', new_employee_processing_path(params:{item_id: item}), class: 'btn btn-primary item-index-process-button' %>
          <%= link_to '削除', [:employee,item], data:{confirm: '削除しますか？' }, method: :delete, id: "delete_button#{item.id}", class: 'btn btn-danger item-index-button' %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
 <% else %> 
   <div class="p-5 bg-secondary text-center text-white font-weight-bold">まだ登録商品がありません。</div>
 <% end %>
