 <h2 class="center">登録情報の更新</h2>

<div class="row">
    <div class="col-md-10">
      <div class="editform">
        <%= form_with(model: @user, url: customer_user_path(@user), local: true) do |f| %>
          <%= render 'shared/error_messages', object: @user %>

          <div class="col-md-10">
            <%= f.label :name, "お名前（漢字）", class: "label-#{yield(:class_text)}" %>
            <%= f.text_field :name, class: "form-control" %>
            
            <%= f.label :name_kana, "お名前（カナ）", class: "label-#{yield(:class_text)}" %>
            <%= f.text_field :name_kana, class: "form-control" %>
          
            <%= f.label :tellnumber, "電話番号", class: "label-#{yield(:class_text)}" %>
            <%= f.telephone_field :tellnumber, class: "form-control" %>

            <%= f.label :email, class: "label-#{yield(:class_text)}" %>
            <%= f.email_field :email, class: "form-control" %>

            <%= f.label :password, "パスワード", class: "label-#{yield(:class_text)}" %>
            <%= f.password_field :password, class: "form-control" %>

            <%= f.label :password_confirmation, "パスワード確認", class: "label-#{yield(:class_text)}" %>
            <%= f.password_field :password_confirmation, class: "form-control" %>
          </div>
          <div class="center_btn">
            <%= f.submit "更新", class: "btn btn-primary btn-lg btn-#{yield(:class_text)}" %>
            <%= link_to "戻る", customer_user_path(current_user), class: "btn btn btn-success btn-lg return" %>
          </div>
      </div>
      <% end %>
  </div>
</div>
